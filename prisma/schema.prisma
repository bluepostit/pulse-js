generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "debian-openssl-3.0.x"]
}

datasource db {
  provider = "postgres"
  url      = env("DATABASE_URL")
}

enum PulseStatus {
  SAFE
  SAFE_BUT_SITUATION_ONGOING
  IN_DANGER
  IN_SERIOUS_DANGER
  PROPERTY_LOSS
  INJURED
  NEED_MEDICAL_ASSISTANCE
  SERIOUSLY_INJURED
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique
  password String
  pulses   Pulse[]
}

model Pulse {
  id        Int         @id @default(autoincrement())
  user      User        @relation(fields: [userId], references: [id])
  userId    Int
  status    PulseStatus @default(SAFE)
  reachable Boolean?
  message   String?
  createdAt DateTime    @default(now())
}
